# Application Configuration
# Common settings shared across all services

# Environment
ENVIRONMENT=test
LOG_LEVEL=INFO
DEBUG=false

# Service Mesh / Istio
ENABLE_ISTIO=true
ISTIO_MTLS=PERMISSIVE

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# Git Configuration (for MCP services)
GIT_DEFAULT_BRANCH=main
GIT_CLONE_DEPTH=1
